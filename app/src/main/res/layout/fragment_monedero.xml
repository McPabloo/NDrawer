<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_monedero"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.rutas.SlideshowFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/abeezee"
        android:text="Puntos Disponibles"
        android:textColor="#5B3986"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="640dp"
        android:text="Recuerda realizar tu recarga antes de acceder al autobus"
        app:layout_constraintBottom_toBottomOf="@+id/frameLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="125dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="310dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:fontFamily="@font/abeezee"
        android:text="Cuentas con un total:"
        android:textColor="#5B3986"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="110dp"
        android:fontFamily="@font/abeezee"
        android:text="XXX puntos"
        android:textColor="#5B3986"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView34" />


    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="421dp"
        android:layout_height="384dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/nav_fondo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="250dp"
            android:layout_height="87dp"
            android:src="@drawable/tarjetas"
            android:translationX="90sp"
            android:translationY="12sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abeezee"
            android:text="Ahorra tiempo y dinero"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            android:translationY="130sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abeezee"
            android:text="FÃ¡cil de usar"
            android:textAlignment="center"
            android:textColor="#F1EEEE"
            android:textSize="24sp"
            android:textStyle="bold"
            android:translationY="170sp"
            android:translationZ="12sp" />

        <Button
            android:id="@+id/botonpagar"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:background="@drawable/nav_ja"
            android:text="Comprar Puntos"
            android:translationX="110sp"
            android:translationY="300sp"
            android:translationZ="12sp" />

        <Button
            android:id="@+id/buttoncomprar"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:background="@drawable/nav_ja"
            android:text="Pago"
            android:translationX="110sp"
            android:translationY="240sp"
            android:translationZ="12sp" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>