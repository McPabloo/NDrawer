<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/framepueba"
    android:layout_height="match_parent"
    tools:context=".ui.rutas.inforutasFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#1C1A1A"
        android:backgroundTint="#090909"
        android:textAlignment="center"
        android:textColor="#AC4C4C"
        android:textSize="1sp"
        android:translationY="80sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/abeezee"
        android:text="Ruta XX"
        android:textAlignment="center"
        android:textColor="#5B3986"
        android:textSize="34sp"
        android:textStyle="bold"
        android:translationY="15sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Todo sobre las rutas"
        android:textSize="20sp"
        android:translationX="120sp"
        android:translationY="49sp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="366dp"
        android:layout_height="268dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="176dp"
        android:src="@drawable/ruta"
        android:translationX="23sp"
        android:translationY="115sp"
        tools:ignore="MissingConstraints" />

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="413dp"
        android:layout_height="158dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/nav_fondo"
        android:translationY="452sp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abeezee"
            android:text="Por el momento hay tráfico moderado"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:translationY="75sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#6C51AC"
            android:text="Tráfico"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="422dp"
        android:layout_height="168dp"
        android:background="@drawable/nav_fondo"
        android:translationY="405sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abeezee"
            android:text="Ruta funcional desde: 6:00 am - 10:00 pm"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:translationY="80sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="#6C51AC"
            android:text="Horarios"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />

    </FrameLayout>

</FrameLayout>

